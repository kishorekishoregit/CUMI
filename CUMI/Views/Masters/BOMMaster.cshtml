@{
    ViewBag.Title = "BOMMaster";
}

<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">
              
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                       BOM Master

                    </div><!-- card-header -->
                   

                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Assembly ID<span class="text-danger">*</span>:</label>
                            <input id="txtassemblyid" class="form-control" name="txtassemblyid" placeholder="Assembly ID" type="text" required="" autocomplete="off"autofocus maxlength="100" tabindex="1">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">FG Item Code<span class="text-danger">*</span>:</label>
                            <input id="txtfgitemcode" class="form-control" name="txtfgitemcode" placeholder="FG Item Code" type="text" required="" autocomplete="off" autofocus maxlength="100" tabindex="2">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">FG Item Name<span class="text-danger"></span>:</label>
                            <input id="txtfgitemname" class="form-control" name="txtfgitemname" placeholder="FG Item Name" type="text" readonly required="" maxlength="100" tabindex="3">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper2" class="parsley-select">
                                <label class="control-label" for="ddlvariant">Variant Code<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddlvariant" data-parsley-class-handler="#slWrapper2" data-parsley-errors-container="#slErrorContainer2" name="ddlvariant" tabindex="4" required>
                                </select>
                            </div>
                            <div id="slErrorContainer2"></div>
                        </div>
                    </div>

                    <hr class="mg-y-30">
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                       BOM Master Details
                    </div><!-- card-header -->

                    <div id="adddts">
                        <div class="row row-sm" style=" margin-top: 25px;">
                            <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                                <div id="slWrapper4" class="parsley-select">
                                    <label class="control-label" for="ddlmolditemcode">Mould Item Code<span class="text-danger">*</span>:</label>
                                    <select class="form-control select2" id="ddlmolditemcode" data-parsley-class-handler="#slWrapper4" data-parsley-errors-container="#slErrorContainer4" tabindex="5" name="ddlmolditemcode" required>
                                    </select>
                                </div>
                                <div id="slErrorContainer4"></div>
                            </div>

                            <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                                <label class="form-control-label" for="txtmolditemname">Mould Item Description <span class="tx-danger">*</span>:</label>
                                <input id="txtmolditemname" class="form-control" name="txtmolditemname" readonly placeholder="Mould Item Description" type="text" tabindex="6">
                            </div>
                            <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                                <div id="slWrapper7" class="parsley-select">
                                    <label class="control-label" for="ddlvariantdetails">Variant Code<span class="text-danger">*</span>:</label>
                                    <select class="form-control select2" id="ddlvariantdetails" data-parsley-class-handler="#slWrapper7" data-parsley-errors-container="#slErrorContainer7" tabindex="7" name="ddlvariantdetails" required>
                                    </select>
                                </div>
                                <div id="slErrorContainer7"></div>
                            </div>
                            <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                                <label class="form-control-label" for="txtquantity">Quantity <span class="tx-danger">*</span>:</label>
                                <input id="txtquantity" class="form-control" name="txtquantity" placeholder="Quantity" min="0" oninput="validity.valid||(value='');" type="number" autocomplete="off" tabindex="8">
                            </div>


                        </div>


                        <div class="wizard-actions" style="text-align: right !important; margin-right: 70px; margin-bottom: 15px; margin-top: 30px;">

                            <div class="panel-heading-btn">
                                <a class="btn btn-az-secondary" data-original-title="Add" title="Add" id="btnadd"><i class="typcn typcn-document-add" tabindex="9"></i> <span class="hidden-xs" id="actiontypeaddd"></span></a>
                                <a href="javascript:;" class="btn btn-danger btn-sm" data-original-title="Clear" title="Clear" id="btnitemclear"><i class="typcn typcn-cancel" tabindex="10"></i> <span class="hidden-xs"></span></a>
                            </div>

                        </div>
                    </div>


                    <div class="wrapper">
                        <table id="dynamic-table1" class="table table-striped table-bordered table-hover">
                            <thead>

                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                        <button class="btn btn-az-secondary" id="btnsubmit" type="submit" title="Save" tabindex="11">
                            <span id="actiontype">Save</span>
                            <i class="typcn typcn-bookmark icon-on-left"></i>
                        </button>
                        <a class="btn btn-danger btn-sm" id="btnclear" title="Clear" tabindex="12">
                            <span id="actiontype">Clear</span>
                            <i class="typcn typcn-social-at-circular icon-on-left"></i>
                        </a>


                    </div>

                    <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                        BOM Master Details
                    </div><!-- card-header -->

                    <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                        <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                        </table>
                    </div>
            </div>
        </div>
    </div><!-- card-body -->
</div>
<div id="modalview" class="modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal-content-demo">
            <div class="wrapper">
                <div class="modal-header">
                    <h6 class="modal-title">Child Item Details</h6>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer table-responsive" style="margin-top: 20px;">
                        <table id="dynamic-table2" class="table table-striped table-bordered table-hover checkupload">
                            <tbody id="tbody" class="checkuploadbody"></tbody>
                        </table>
                    </div>
                </div>
                <!-- modal-body -->
            </div>
        </div>
    </div>

    <!-- modal-dialog -->

</div>

