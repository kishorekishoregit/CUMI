@{
    ViewBag.Title = "PlantMaster";
}

<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">
                <form class="form-horizontal clearfix" id="Plant-form" name="myform" action="@Url.Content("~/Masters/PlantMaster")" method="post">
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                        Plant Master

                    </div><!-- card-header -->
                    <div class="row row-sm" style=" margin-top: 25px;">

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="control-label">Plant Code <span class="text-danger">*</span>:</label>
                            <input id="txtPlantCode" class="form-control" name="txtPlantCode" placeholder="Enter Plant Code" type="text" required="" maxlength="50" autocomplete="off" tabindex="1" autofocus>

                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Plant Name <span class="text-danger">*</span>:</label>
                            <input id="txtPlantName" class="form-control" name="txtPlantName" placeholder="Enter Plant Name" type="text" required="" maxlength="100" autocomplete="off" tabindex="2">
                            <input type="hidden" id="hdautoid">
                        </div><!-- col -->
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper1" class="parsley-select">
                                <label class="control-label" for="ddlRecordStatus">Record Status<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddlRecordStatus" data-parsley-class-handler="#slWrapper1" data-parsley-errors-container="#slErrorContainer1" autocomplete="off" tabindex="3" required>
                                </select>
                            </div>
                            <div id="slErrorContainer1"></div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Remarks <span class="tx-danger"></span></label>
                            <input id="txtRemarks" class="form-control" name="txtRemarks" placeholder="Enter Remarks" type="text" maxlength="100" autocomplete="off" tabindex="4">
                            <input type="hidden" id="hdautoid">
                        </div>
                    </div>
                    

                    <div class="card-body">
                        <div class="row">
                            
                            <div class="col-lg-12">                             
                                <div class="card-box" style=" margin-top: 30px; margin-left: -20px ">
                                    <div class="from-group col-lg-3 col-md-3 col-sm-3" style="float:right;margin-top: 20px;">
                                        <a class="btn btn-info btn-custom waves-effect waves-light" id="btntemplateimport" type="submit" value="Export">
                                            Download Template
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    

                                        <div class="form-group">
                                            <label for="FileUpload">Plant Master Details to Upload:</label>
                                        </div>

                                        <input type="file" id="hf" name="postedFile" title="upload file smaller than 5KB" placeholder="upload file smaller than 5KB" autofocus style="background: #5fd6a6;color: white;margin-top: 7px;" />
                                        <a class="btn btn-success btn-custom waves-effect waves-light" id="btnimport" value="Import"style="background: #7CB342;">
                                            Upload
                                            <i class="fas fa-file-upload" aria-hidden="true"></i>
                                        </a>


                                 

                                </div>

                            </div>
                        </div>
        </div>

                    <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                        <button class="btn btn-az-secondary" id="btnsubmit" type="submit" title="Save" tabindex="5">
                            <span id="actiontype">Save</span>
                            <i class="typcn typcn-bookmark icon-on-left"></i>
                        </button>
                        <a class="btn btn-danger btn-sm" id="btnclear" title="Clear" tabindex="6">
                            <span id="actiontype">Clear</span>
                            <i class="typcn typcn-social-at-circular icon-on-left"></i>
                        </a>



                    </div>
                </form>
                <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                    Plant Master Details
                </div><!-- card-header -->
                <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                    </table>
                </div>
            </div>
        </div><!-- card-body -->


    </div>
</div>





