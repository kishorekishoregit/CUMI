@{
    ViewBag.Title = "ChildPartMaster";
}
<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">
                <form class="form-horizontal clearfix" id="Employee-form" name="myform" action="@Url.Content("~/Masters/ChildPartMaster")" method="post">
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                        Child Part Master

                    </div><!-- card-header -->
                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="control-label col-lg-5 no-padding-right" for="ddlplant">Plant<span class="text-danger">*</span>:</label>
                            @*<div class="col-lg-7">*@
                            <div class="clearfix">
                                <input id="ddlplant" class="form-control" list="ddlplantlst" name="ddlplant" placeholder="Choose one" data-toggle="tooltip" data-placement="top" maxlength="50" tabindex="1" autofocus required>
                                <datalist id="ddlplantlst" style="background-color:aqua"></datalist>
                                <input type="hidden" id="hdautoid">
                                @*<select class="chosen-select form-control" id="ddlSaleLeadNo" name="SaleLeadNo" data-placeholder="" tabindex="0" data-toggle="tooltip" data-placement="top" title="Select sale lead number" required autofocus>
                        <option value=""></option>
                    </select>*@
                            </div>
                            @*</div>*@
                        </div>
                        @*<div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                <label class="form-control-label">Plant Code: <span class="tx-danger">*</span></label>
                <input id="txtplantcode" class="form-control" name="txtplantcode" placeholder="Plant Code" type="text" required="" autofocus maxlength="100" tabindex="1" autocomplete="off">
                <input type="hidden" id="hdautoid">
            </div>*@
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Location<span class="text-danger"></span>:</label>
                            <input id="txtlocation" class="form-control" name="txtlocation" placeholder="Location" type="text" maxlength="100" tabindex="2" readonly>
                        </div>


                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Child Item Code<span class="tx-danger">*</span>:</label>
                            <input id="txtitemcode" class="form-control" name="txtitemcode" placeholder="Child Item Code" type="text" required="" autocomplete="off" maxlength="100" tabindex="3" oninput="this.value = this.value.replace(/\s/g, '')">
                        </div>

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Child Item Description<span class="tx-danger">*</span>:</label>
                            <input id="txtdescription" class="form-control" name="txtdescription" placeholder="Child Item Description" type="text" required="" autocomplete="off" maxlength="100" tabindex="4">
                        </div>
                    </div>

                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper6" class="parsley-select">
                                <label class="control-label col-lg-4" for="ddluom">UOM<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddluom" data-parsley-class-handler="#slWrapper6" data-parsley-errors-container="#slErrorContainer6" name="ddlldepartment" tabindex="5" required>
                                </select>
                            </div>
                            <div id="slErrorContainer6"></div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label" for="txtquantity">Quantity <span class="tx-danger">*</span>:</label>
                            <input id="txtquantity" class="form-control" name="txtquantity" placeholder="Quantity" min="0" oninput="this.value = Math.abs(this.value)" type="number" required="" autocomplete="off" tabindex="6">
                        </div>

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper7" class="parsley-select">
                                <label class="control-label" for="ddlstatus">Record Status<span class="text-danger" >*</span>:</label>
                                <select class="form-control select2" id="ddlstatus" data-parsley-class-handler="#slWrapper7" data-parsley-errors-container="#slErrorContainer7" name="ddlstatus" tabindex="7" required>
                                </select>
                            </div>
                            <div id="slErrorContainer7"></div>
                        </div>

                    </div>

                    <div class="card-body">
                        <div class="row">

                            <div class="col-lg-12">
                                <div class="card-box" style=" margin-top: 30px;">
                                    <div class="from-group col-lg-3 col-md-3 col-sm-3" style="float:right;margin-top: 20px;">
                                        <a class="btn btn-info btn-custom waves-effect waves-light" id="btntemplateimport" type="submit" value="Export">
                                            Download Template
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </a>
                                    </div>


                                    <div class="form-group">
                                        <label for="FileUpload">Child Part Master Details to Upload:</label>
                                    </div>

                                    <input type="file" id="hf" name="postedFile" title="upload file smaller than 5KB" placeholder="upload file smaller than 5KB" autofocus style="background: #5fd6a6;color: white;margin-top: 7px;" />
                                    <a class="btn btn-success btn-custom waves-effect waves-light" id="btnimport" value="Import" style="background: #7CB342;">
                                        Upload
                                        <i class="fas fa-file-upload" aria-hidden="true"></i>
                                    </a>




                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                        <button class="btn btn-az-secondary" id="btnsubmit" type="submit" title="Save" tabindex="7">
                            <span id="actiontype">Save</span>
                            <i class="typcn typcn-bookmark icon-on-left"></i>
                        </button>
                        <a class="btn btn-danger btn-sm" id="btnclear" title="Clear" tabindex="8">
                            <span id="actiontype">Clear</span>
                            <i class="typcn typcn-social-at-circular icon-on-left"></i>
                        </a>


                    </div>
                </form>
                <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                    Child Part Master Details
                </div><!-- card-header -->

                <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                    </table>
                </div>
            </div>
        </div>
    </div><!-- card-body -->


</div>

