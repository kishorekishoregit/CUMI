@{
    ViewBag.Title = "MoldMaster";
}
<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">
                <form class="form-horizontal clearfix" id="Employee-form" name="myform" action="@Url.Content("~/Masters/MoldMaster")" method="post">
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                        Mould Master

                    </div><!-- card-header -->
                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="control-label col-lg-5 no-padding-right" for="ddlplant">Plant<span class="text-danger">*</span>:</label>
                            <div class="clearfix">
                                <input id="ddlplant" class="form-control" placeholder="Choose one" list="ddlplantlst" name="ddlplant" data-toggle="tooltip" data-placement="top" maxlength="50" tabindex="1" autofocus required>
                                <datalist id="ddlplantlst" style="background-color:aqua"></datalist>
                                <input type="hidden" id="hdautoid">

                            </div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Location<span class="text-danger"></span>:</label>
                            <input id="txtlocation" class="form-control" name="txtlocation" placeholder="Location" type="text" autocomplete="off" maxlength="100" readonly tabindex="2">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper10" class="parsley-select">
                                <label class="control-label" for="ddlmoldtype">Mould Type<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddlmoldtype" data-parsley-class-handler="#slWrapper10" tabindex="3" data-parsley-errors-container="#slErrorContainer10" name="ddlmoldtype" required>
                                </select>
                            </div>
                            <div id="slErrorContainer10"></div>
                        </div>

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Mould Item Code<span class="tx-danger">*</span>:</label>
                            <input id="txtmolditemcode" class="form-control" name="txtmolditemcode" placeholder="Mould Item Code" autocomplete="off" type="text" required="" maxlength="100" tabindex="4" oninput="this.value = this.value.replace(/\s/g, '')">
                        </div>


                    </div>

                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Mould Item Description<span class="tx-danger">*</span>:</label>
                            <input id="txtdescription" class="form-control" name="txtdescription" placeholder="Mould Item Description" type="text" required autocomplete="off" maxlength="100" tabindex="6">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Variant Code<span class="tx-danger">*</span>:</label>
                            <input id="txtvariantcode" class="form-control" name="txtvariantcode" placeholder="Variant Code" type="text" required="" autocomplete="off" maxlength="100" tabindex="5" oninput="this.value = this.value.replace(/\s/g, '')">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper2" class="parsley-select">
                                <label class="control-label col-lg-4" for="ddluom">UOM<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddluom" data-parsley-class-handler="#slWrapper2" data-parsley-errors-container="#slErrorContainer2" name="ddlldepartment" tabindex="12" required>
                                </select>
                            </div>
                            <div id="slErrorContainer2"></div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Supplier Code<span class="tx-danger">*</span>:</label>
                            <input id="txtsuppliercode" class="form-control" name="txtsuppliercode" placeholder="Supplier" type="text" required="" autocomplete="off" maxlength="100" tabindex="9">
                        </div>

                    </div>

                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Supplier Name<span class="tx-danger">*</span>:</label>
                            <input id="txtsuppliername" class="form-control" name="txtsuppliername" placeholder="Supplier Name" type="text" required="" autocomplete="off" maxlength="100" tabindex="10">
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Supplier Address<span class="tx-danger">*</span>:</label>
                            <input id="txtsupplieraddress" class="form-control" name="txtsupplieraddress" placeholder="Supplier Address" type="text" required="" autocomplete="off" maxlength="100" tabindex="11">
                        </div>


                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper3" class="parsley-select">
                                <label class="control-label" for="ddlstatus">Group<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddlgroup" data-parsley-class-handler="#slWrapper3" tabindex="13" data-parsley-errors-container="#slErrorContainer3" name="ddlgroup" required>
                                </select>
                            </div>
                            <div id="slErrorContainer3"></div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper6" class="parsley-select">
                                <label class="control-label" for="ddlitemsubgroup">Item Sub-Group <span class="text-danger">*</span>:</label>
                                <select class="form-control select2" multiple="multiple" id="ddlitemsubgroup" data-parsley-class-handler="#slWrapper6" tabindex="14" data-parsley-errors-container="#slErrorContainer6" name="ddlitemsubgroup" required>
                                </select>
                            </div>
                            <div id="slErrorContainer6"></div>
                        </div>


                    </div>


                    <div class="row row-sm" style=" margin-top: 25px;">

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper7" class="parsley-select">
                                <label class="control-label" for="ddlcategory">Category <span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddlcategory" data-parsley-class-handler="#slWrapper7" tabindex="15" data-parsley-errors-container="#slErrorContainer7" name="ddlcategory" required>
                                </select>
                            </div>
                            <div id="slErrorContainer7"></div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <div id="slWrapper8" class="parsley-select">
                                <label class="control-label" for="ddlstatus">Record Status<span class="text-danger">*</span>:</label>
                                <select class="form-control select2" id="ddlstatus" data-parsley-class-handler="#slWrapper8" tabindex="16" data-parsley-errors-container="#slErrorContainer8" name="ddlstatus" required>
                                </select>
                            </div>
                            <div id="slErrorContainer8"></div>
                        </div>
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label" for="txtremarks">Remarks <span class="text-danger"></span>:</label>
                            <input id="txtremarks" class="form-control" name="txtpacksize" placeholder="Enter Remarks" type="text" autocomplete="off" tabindex="17">
                        </div>
                    </div>

                   
                    <div class="card-body">
                        <div class="row">

                            <div class="col-lg-12">
                                <div class="card-box" style=" margin-top: 30px;">
                                    <div class="from-group col-lg-3 col-md-3 col-sm-3" style="float:right;margin-top: 20px;">
                                        <a class="btn btn-info btn-custom waves-effect waves-light" id="btntemplateimport" type="submit" value="Export">
                                            Download Template
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </a>
                                    </div>


                                    <div class="form-group">
                                        <label for="FileUpload">Mould Master Details to Upload:</label>
                                    </div>

                                    <input type="file" id="hf" name="postedFile" title="upload file smaller than 5KB" placeholder="upload file smaller than 5KB" autofocus style="background: #5fd6a6;color: white;margin-top: 7px;" />
                                    <a class="btn btn-success btn-custom waves-effect waves-light" id="btnimport" value="Import" style="background: #7CB342;">
                                        Upload
                                        <i class="fas fa-file-upload" aria-hidden="true"></i>
                                    </a>




                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                        <button class="btn btn-az-secondary" id="btnsubmit" title="Save" type="submit" tabindex="18">
                            <span id="actiontype">Save</span>
                            <i class="typcn typcn-bookmark icon-on-left"></i>
                        </button>
                        <a class="btn btn-danger btn-sm" title="Clear" id="btnclear" tabindex="19">
                            <span id="actiontype">Clear</span>
                            <i class="typcn typcn-social-at-circular icon-on-left"></i>
                        </a>


                    </div>
                </form>
                <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                    Mould Master Details
                </div><!-- card-header -->

                <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                    </table>
                </div>
            </div>
        </div>
    </div><!-- card-body -->


</div>

