@{
    ViewBag.Title = "ProductionOrderAssign";
}
<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">

                <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                    Mould Production Order
                </div>
                <div class="row row-sm" style=" margin-top: 25px;">
                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <label class="control-label col-lg-8 no-padding-right" for="ddlwarehouse">Warehouse Picker:<span class="tx-danger">*</span></label>
                        <div class="clearfix">
                            <input id="ddlwarehousepicker" class="form-control" placeholder="Choose Warehouse Picker" list="ddlwarehousepickerlst" name="ddlwarehousepicker" data-toggle="tooltip" data-placement="top" maxlength="50" tabindex="1" autofocus>
                            <datalist id="ddlwarehousepickerlst" style="background-color:aqua"></datalist>
                            <input type="hidden" id="hdautoid">
                        </div>
                    </div>
                </div>
                <div class="row row-sm" style=" margin-top: 25px;">
                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <div class="form-group">
                            <label class="control-label">Select All</label>
                            <input type="checkbox" id="checkall" name="checkall" checked="checked" class="checkbox isselect" onclick="toggle(this);" />
                        </div>
                    </div>
                </div>
                <div class="wizard-actions" style="text-align: end !important;margin-top:-81px;">

                    <button class="btn btn-az-secondary" id="btnassign" type="submit" title="Save" tabindex="7">
                        <span id="actiontype">Assign</span>
                        <i class="typcn typcn-user-add icon-on-left"></i>
                    </button>
                </div>
                <div class="wrapper" style="margin-top: 30px;">

                    <table id="dynamic-table2" class="table table-striped table-bordered table-hover">
                        <thead>

                        </thead>
                        <tbody></tbody>
                    </table>
                </div>


                <hr class="mg-y-30">

                <div class="wrapper">
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;margin-bottom:15px;">
                        Mould Details
                    </div>
                    <table id="dynamic-tableassemblydts" class="table table-striped table-bordered table-hover">
                        <thead>

                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                    <button class="btn btn-az-secondary" id="btnsubmit" type="submit" title="Save" tabindex="7">
                        <span id="actiontype">Save</span>
                        <i class="typcn typcn-bookmark icon-on-left"></i>
                    </button>
                    <a class="btn btn-danger btn-sm" id="btnclear" title="Clear" tabindex="8">
                        <span id="actiontype">Clear</span>
                        <i class="typcn typcn-social-at-circular icon-on-left"></i>
                    </a>


                </div>
                <hr class="mg-y-30">
                <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                    Mould Production Order
                </div><!-- card-header -->

                <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                    </table>
                </div>


            </div>
            </div>
    </div><!-- card-body -->


</div>

<div id="modalview" class="modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal-content-demo">
            <div class="wrapper">
                <div class="modal-header">
                    <h6 class="modal-title"> Item Details</h6>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer table-responsive" style="margin-top: 20px;">
                        <table id="dynamic-table1" class="table table-striped table-bordered table-hover checkupload">
                            <tbody id="tbody" class="checkuploadbody"></tbody>
                        </table>
                    </div>
                </div>
                <!-- modal-body -->
            </div>
        </div>
    </div>

    <!-- modal-dialog -->

</div>
