@{
    ViewBag.Title = "MoldShotCount";
}
<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">

                <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                    Mould Shot Count Entry

                </div><!-- card-header -->
                <div class="row row-sm" style=" margin-top: 25px;">

                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <div id="slWrapper2" class="parsley-select">
                            <label class="control-label" for="ddlmolditemcode"> Mould Item Code<span class="text-danger">*</span>:</label>
                            <select class="form-control select2" id="ddlmolditemcode" data-parsley-class-handler="#slWrapper2" data-parsley-errors-container="#slErrorContainer2" name="ddlmolditemcode" tabindex="1" required>
                            </select>
                            <input type="hidden" id="hdautoid">
                        </div>
                        <div id="slErrorContainer2"></div>
                    </div>

                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <div id="slWrapper2" class="parsley-select">
                            <label class="control-label" for="dllrfidnumber"> RFID Number<span class="text-danger">*</span>:</label>
                            <select class="form-control select2" id="dllrfidnumber" data-parsley-class-handler="#slWrapper2" data-parsley-errors-container="#slErrorContainer3" name="dllrfidnumber" tabindex="1" required>
                            </select>
                            <input type="hidden" id="hdautoid">
                        </div>
                        <div id="slErrorContainer2"></div>
                    </div>

                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <label class="form-control-label">Mould Item Description<span class="tx-danger"></span>:</label>
                        <input id="txtitemdescription" class="form-control" name="txtitemdescription" placeholder="Mould Item Description" type="text" required="" maxlength="100" readonly>

                    </div>

                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <label class="form-control-label">FG Item Code<span class="tx-danger"></span>:</label>
                        <input id="txtfgitemcode" class="form-control" name="txtfgitemcode" placeholder="FG Item Code" type="text" required="" maxlength="100" tabindex="3" readonly>
                    </div>
                    

                </div>
                <div class="row row-sm" style=" margin-top: 25px;">

                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <label class="form-control-label col-lg-12">Date of Shot<span class="tx-danger">*</span>:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                </div>
                            </div>

                            <input type="text" class="form-control fc-datepicker" placeholder="DD/MM/YYYY" id="txtdateofshot" required>
                        </div>
                    </div>

                    <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                        <label class="form-control-label" for="txtquantity">Shot Count <span class="tx-danger">*</span>:</label>
                        <input id="txtshotcount" class="form-control" name="txtshotcount" placeholder="Shot Count " min="0" oninput="this.value = Math.abs(this.value)" type="number" required="" tabindex="6">
                    </div>


                </div>
                <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                    <button class="btn btn-az-primary" id="btnsubmit" type="submit" title="Save" tabindex="7">
                        <span id="actiontype">Save</span>
                        <i class="typcn typcn-bookmark icon-on-left"></i>
                    </button>
                    <a class="btn btn-danger btn-sm" id="btnclear" title="Clear" tabindex="8">
                        <span id="actiontype">Clear</span>
                        <i class="typcn typcn-social-at-circular icon-on-left"></i>
                    </a>
                </div>

                <div class="card-header tx-medium bd-0 tx-white bg-indigo" style="border-radius: 5px;">
                    Mould Shot Count Entry Details
                </div><!-- card-header -->
                <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                    </table>
                </div>

            </div>
        </div>
    </div><!-- card-body -->
</div>



@section Scripts
{

    <script>
        var highlightedDays = ['2018-5-10', '2018-5-11', '2018-5-12', '2018-5-13', '2018-5-14', '2018-5-15', '2018-5-16'];
        var date = new Date();
        $('.fc-datepicker').datepicker({
            showOtherMonths: true,
            selectOtherMonths: true,
            dateFormat: 'dd/mm/yy',
            beforeShowDay: function (date) {
                var m = (d = date.getDate(), date.getMonth(), y = date.getFullYear());
                for (var i = 0; i < highlightedDays.length; i++) {
                    if ($.inArray(d + '/' + (m + 1) + '/' + y, highlightedDays) != -1) {
                        return [true, 'ui-date-highlighted', ''];
                    }
                }
                return [true];
            }
        });
        $('#txtdateofshot').val(new Date().toJSON().slice(0, 10));
        $('select').select2({ width: "100%" });

    </script>
