@{
    ViewBag.Title = "GRNEntry";
}

<div class="row">
    <div id="fuelux-wizard-container" class="no-steps-container">

        <div class="card bd-0">

            <div class="card-body bd bd-t-0">
                <form class="form-horizontal clearfix" id="Employee-form" name="myform" action="@Url.Content("~/Transaction/GRNEntry")" method="post">
                    <div class="card-header tx-medium bd-0 tx-white bg-indigo">
                        GRN Entry

                    </div><!-- card-header -->
                    <div class="row row-sm" style=" margin-top: 25px;">
                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">GRN No <span class="tx-danger">*</span>:</label>
                            <input id="txtgrnno" class="form-control" name="txtgrnno" placeholder="GRN No" type="text" required="" maxlength="100" autocomplete="off" tabindex="1" autofocus>
                        </div>

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">GRN Date<span class="tx-danger"></span>:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                    </div>
                                </div>

                                <input type="text" class="form-control fc-datepicker" placeholder="MM/DD/YYYY" autocomplete="off" id="txtgrndate" tabindex="2">
                            </div>
                        </div>

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Supplier <span class="tx-danger">*</span>:</label>
                            <input id="txtsupplier" class="form-control" name="txtsupplier" placeholder="Supplier" type="text" required="" autocomplete="off" maxlength="100" tabindex="3">
                        </div>

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Po No <span class="tx-danger">*</span>:</label>
                            <input id="txtpono" class="form-control" name="txtpono" placeholder="Po No" type="text" required="" autocomplete="off" maxlength="100" tabindex="4">
                        </div>

                    </div>

                    <div class="row row-sm" style=" margin-top: 25px;">

                        <div class="col-md-5 col-lg-3 mg-t-20 mg-md-t-0">
                            <label class="form-control-label">Invoice No<span class="text-danger">*</span>:</label>
                            <input id="txtinvoiceno" class="form-control" name="txtinvoiceno" placeholder="Invocie No" type="text" autocomplete="off" required="" maxlength="100" tabindex="5">
                        </div>


                    </div>

                    <hr class="mg-y-30">
