        public ResponseRMPicklistprint FetchRMPicklistprintdetailsDAL(RequestRMPicklistprint request)
        {
            ResponseRMPicklistprint response = new ResponseRMPicklistprint();
            response.ErrorContainer = new List<ErrorItem>();
            try
            {
                using (TransactionScope scope = new TransactionScope())
                {
                    using (SqlConnection con = new SqlConnection(connectionstring))
                    {
                        SqlCommand cmd = new SqlCommand("[TRANSACTIONS].[RMPICKLISTREPORT_PICKLISTBYPICKLISTNO]", con);
                        cmd.CommandType = CommandType.StoredProcedure;
                        cmd.Parameters.Add(new SqlParameter("@PICKLISTNO", request.requestRMPicklistprint.picklistno.Trim()));
                        con.Open();
                        SqlDataAdapter oda = new SqlDataAdapter(cmd);
                        DataSet ds = new DataSet();
                        oda.Fill(ds);
                        if (ds != null)
                        {
                            response.JS_RMPicklist = ds.Tables[0];
                            response.JS_RMPicklistdetails = ds.Tables[1];
                            
                        }
                    }
                    scope.Complete();
                }
            }
            catch (Exception ex)
            {
                string responsetime = DateTime.Now.ToString("yyyy MM dd hh:mm:ss.fff tt");
                string responselog = createlog("FetchRMPicklistprintdetails: " + "Method Name FetchRMPicklistprintdetails" + " -- " + ex.StackTrace + "-- " + ex.Source + " -- " + ex.Message);
                response.ErrorContainer.Add(new ErrorItem { DataItem = responselog, ErrorNo = "LWMS00000" });
                response.result = false;
            }

            return response;

        }

