        public ResponseGRNEntry GRNEditDtsBC(RequestGRNEntry request)
        {
            ResponseGRNEntry response = new ResponseGRNEntry();
            WMSDAL DAL = new WMSDAL();
            response = DAL.GRNEditDtsDAL(request);
            return response;
        }
        public ResponseGRNEntry GRNUpdateBC(RequestGRNEntry request)
        {

            ResponseGRNEntry response = new ResponseGRNEntry();
            try
            {
                response.ErrorContainer = ValidateGRNInsert(request);
                if (response.ErrorContainer.Count == 0)
                {
                    WMSDAL DAC = new WMSDAL();
                    return DAC.GRNUpdateDAL(request);
                }
            }
            catch (Exception ex)
            { }
            return response;

        }
    }
