    public class StockAdjustmentBC
    {
        public ResponseStockAdjustment FetchStockAdjustBC()
        {
            ResponseStockAdjustment response = new ResponseStockAdjustment();
            WMSDAL DAL = new WMSDAL();
            response = DAL.FetchStockAdjustDAL();
            return response;
        }
        public ResponseStockAdjustment FetchItemDetailsbyItemcodeBC(RequestStockAdjustment request)
        {
            ResponseStockAdjustment response = new ResponseStockAdjustment();
            WMSDAL DAL = new WMSDAL();
            response = DAL.FetchItemDetailsbyItemcodeDAL(request);
            return response;

        }
        public ResponseStockAdjustment InsertStockAdjustBC(RequestStockAdjustment request)
        {

            ResponseStockAdjustment response = new ResponseStockAdjustment();
            WMSDAL DAL = new WMSDAL();
            response = DAL.InsertStockAdjustDAL(request);
            return response;

        }
    }
