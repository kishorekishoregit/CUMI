            public List<ErrorItem> ValidateFormingPlanInsert(RequestFormingPlanEntry request)
            {
                List<ErrorItem> err = new List<ErrorItem>();
                if (request.ReqFormingPlanEntry.FormingPlantNO == "")
                    err.Add(new ErrorItem { DataItem = "Forming No.", ErrorNo = "SSB0009" });
                if (request.ReqFormingPlanEntry.FormingPlantDate == "")
                    err.Add(new ErrorItem { DataItem = "Forming Date", ErrorNo = "SSB0009" });
                
                if (request.FormingPlanDetailEntity.Count == 0)
                    err.Add(new ErrorItem { DataItem = "Please, Atleast one data detail to proceed!!!", ErrorNo = "SSB0000" });

                return err;


