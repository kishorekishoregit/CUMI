        public ResponseSRNEntry SRNEditDtsBC(RequestSRNEntry request)
        {
            ResponseSRNEntry response = new ResponseSRNEntry();
            WMSDAL DAL = new WMSDAL();
            response = DAL.SRNEditDtsDAL(request);
            return response;
        }
        public ResponseSRNEntry SRNUpdateBC(RequestSRNEntry request)
        {

            ResponseSRNEntry response = new ResponseSRNEntry();
            try
            {
                response.ErrorContainer = ValidateSRNInsert(request);
                if (response.ErrorContainer.Count == 0)
                {
                    WMSDAL DAC = new WMSDAL();
                    return DAC.SRNUpdateDAL(request);
                }
            }
            catch (Exception ex)
            { }
            return response;

        }
    }
}
