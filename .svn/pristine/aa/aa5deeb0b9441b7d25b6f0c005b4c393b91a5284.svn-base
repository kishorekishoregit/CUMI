        public List<ErrorItem> Validate(RequestRackMaster request)
        {
            List<ErrorItem> err = new List<ErrorItem>();
            if (request.requestRackMaster.RACKCODE == "")
                err.Add(new ErrorItem { DataItem = "Rack Code", ErrorNo = "SSB0009" });
            if (request.requestRackMaster.RACKNAME == "")
                err.Add(new ErrorItem { DataItem = "Rack Name", ErrorNo = "SSB0009" });
            if (request.requestRackMaster.LOCATIONCODE == "")
                err.Add(new ErrorItem { DataItem = "Location Name", ErrorNo = "SSB0010" });



            return err;
        }
    }
