    public class RackMasterBC
    {

        public ResponseRackMaster FetchRackMasterPageLoadBC()
        {
            ResponseRackMaster response = new ResponseRackMaster();
            WMSDAL DAL = new WMSDAL();
            response = DAL.FetchRackMasterPageLoadDAL();


            return response;
        }
        //Fetch User Details By User Code
        public ResponseRackMaster FetchRackMasterbyRackCodeBC(RequestRackMaster request)
        {


            ResponseRackMaster response = new ResponseRackMaster();
            WMSDAL DAL = new WMSDAL();
            response = DAL.FetchRackMasterbyRackCodeDAL(request);


            return response;

        }
        //Insert 
        public ResponseRackMaster InsertRackMasterBC(RequestRackMaster request)
        {

            ResponseRackMaster response = new ResponseRackMaster();
            response.ErrorContainer = Validate(request);
            if (response.ErrorContainer.Count == 0)
            {
                WMSDAL DAL = new WMSDAL();
                response = DAL.InsertRackMasterDAL(request);
            }

            return response;

        }
        //Update 
        public ResponseRackMaster UpdateRackMasterBC(RequestRackMaster request)
        {


            ResponseRackMaster response = new ResponseRackMaster();
            response.ErrorContainer = Validate(request);
            if (response.ErrorContainer.Count == 0)
            {
                WMSDAL DAL = new WMSDAL();
                response = DAL.UpdateRackMasterDAL(request);

            }
            return response;

        }
