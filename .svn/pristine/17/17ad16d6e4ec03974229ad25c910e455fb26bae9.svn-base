using JKWOODSDAC;
using JKWOODSENTITY;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace JKWOODSBC
{
    public class GRNUploadBC
    {
        public ResponseGRNUpload PageloadGRNUploadBC()
        {
            ResponseGRNUpload response = new ResponseGRNUpload();
            WMSDAL DAL = new WMSDAL();
            response = DAL.PageloadGRNUploadDAL();
            return response;
        }
        public ResponseGRNUpload GRNUploadInsertBC(RequestGRNUpload request)
        {

            ResponseGRNUpload response = new ResponseGRNUpload();
            try
            {
                response.ErrorContainer = ValidateGRNUploadInsert(request);
                if (response.ErrorContainer.Count == 0)
                {
                    WMSDAL DAC = new WMSDAL();
                    return DAC.GRNUploadInsertDAL(request);
                }
            }
            catch (Exception ex)
            { }
            return response;

        }


        public List<ErrorItem> ValidateGRNUploadInsert(RequestGRNUpload request)
        {
            List<ErrorItem> err = new List<ErrorItem>();
            if (request.ReqGRNUpload.GRNNO == "")
                err.Add(new ErrorItem { DataItem = "GRN No.", ErrorNo = "SSB0009" });
            if (request.ReqGRNUpload.GRNDATE == "")
                err.Add(new ErrorItem { DataItem = "GRN Date", ErrorNo = "SSB0009" });
            if (request.ReqGRNUpload.SUPPLIER == "")
                err.Add(new ErrorItem { DataItem = "Supplier", ErrorNo = "SSB0010" });
            if (request.requestGRNUploaddetails.Count == 0)
                err.Add(new ErrorItem { DataItem = "Please, Atleast one data detail to proceed!!!", ErrorNo = "SSB0000" });

            return err;


        }


    }
}
