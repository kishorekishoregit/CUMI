@{
    ViewBag.Title = "ItemMaster";
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12 clearfix">
            <div class="widget-box1">
                <div class="widget-header widget-header-blue widget-header-flat">
                        <h4 class="widget-title lighter">Item Master</h4>
                    </div>
                <div class="widget-body">
                    <div class="widget-main">
                        <div id="fuelux-wizard-container" class="no-steps-container">
                            <form class="form-horizontal clearfix" id="validation-form" name="myform" action="@Url.Content("~/Masters/ItemMaster")" method="post">
                                <div class="row">
                                    <div class="form-group col-lg-4 col-md-4 col-sm-4">
                                        <label class="control-label col-lg-4 no-padding-right" for="txtitemcode">Item Code<span class="text-danger">*</span>:</label>

                                        <div class="col-lg-8">
                                            <div class="clearfix">
                                                <input type="text" style="text-transform:uppercase" id="txtitemcode" name="txtitemcode" class="form-control" autofocus maxlength="20">
                                                <input type="hidden" id="hdautoid">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group col-lg-4 col-md-4 col-sm-4">
                                        <label class="control-label col-lg-4 no-padding-right" for="txtitemname">Item Name<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-8">
                                            <div class="clearfix">
                                                <input style="text-transform:uppercase" type="text" id="txtitemname" name="txtitemname" class="form-control" maxlength="100">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-4 col-sm-4">
                                        <label class="control-label col-lg-4 no-padding-right" for="ddluom">UOM<span class="text-danger">*</span>:</label>

                                        <div class="col-lg-8">
                                            <div class="clearfix">
                                                <select class="chosen-select form-control" id="ddluom" name="ddluom" data-placeholder=""></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-4 col-sm-4">
                                        <label class="control-label col-lg-4 no-padding-right" for="ddlcategory">Category<span class="text-danger">*</span>:</label>

                                        <div class="col-lg-8">
                                            <div class="clearfix">
                                                <select class="chosen-select form-control" id="ddlcategory" name="ddlcategory" data-placeholder=""></select>
                                            </div>
                                        </div>
                                    </div>
                                           <div class="form-group col-lg-4 col-md-4 col-sm-4">
                                        <label class="control-label col-lg-4 no-padding-right" for="ddlitemtype">Item Type<span class="text-danger">*</span>:</label>

                                        <div class="col-lg-8">
                                            <div class="clearfix">
                                                <select class="chosen-select form-control" id="ddlitemtype" name="ddlitemtype" data-placeholder=""></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-4 col-sm-4">
                                        <label class="control-label col-lg-4 no-padding-right" for="ddlStatus">Record Status<span class="text-danger">*</span>:</label>

                                        <div class="col-lg-8">
                                            <div class="clearfix">
                                                <select class="chosen-select form-control" id="ddlStatus" name="ddlStatus" data-placeholder=""></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="card-body">
                            <div class="row">

                                <div class="col-lg-12">

                                    <div class="from-group col-lg-3 col-md-3 col-sm-3" style="float:right;margin-top: 45px;">
                                        <button class="btn btn-info btn-custom waves-effect waves-light" id="btntemplateimport" type="submit" value="Export">
                                            Download Template
                                            <i class="fa fa-download" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                    <div class="card-box">
                                        <div class="row" style="background: #d9edf5;padding: 20px;">
                                            <div class="form-group col-lg-4 col-md-3 col-sm-3">
                                                <div class="form-group">
                                                    <label for="FileUpload">File to Upload:</label>
                                                </div>
                                                <div class="col-md-3" style="width: 35px;">
                                                    <div class="input-group-prepend" style="width: 35px;">
                                                        <input type="file" id="hf" name="postedFile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel" autofocus style="background: #5fd6a6;color: white;" />
                                                        <button class="btn btn-success btn-custom waves-effect waves-light" id="btnimport" type="submit" value="Import">
                                                            Upload
                                                            <i class="fa fa-upload" aria-hidden="true"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="wizard-actions" style="text-align: center !important;">

                            <button class="btn btn-success btn-sm btn-next" id="btnsubmit" type="submit">
                                <span id="actiontype">Save</span>
                                <i class="ace-icon fa fa-check icon-on-right"></i>
                            </button>
                            <button class="btn btn-danger btn-sm" type="submit" id="btnclear">
                                <span id="actiontype">Clear</span>
                                <i class="ace-icon fa fa-refresh icon-on-right"></i>
                            </button>



                        </div>
                    </div><!-- /.widget-main -->
                </div><!-- /.widget-body -->
            </div>
        </div>
      
        <div class="col-xs-12 clearfix">
           
            <!-- div.table-responsive -->
            <div class="clearfix">
                <div class="tableTools-container"></div>
            </div>
            <div class="widget-box1">
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr></tr>
                    </thead>
                    <tbody id="tbody" class="checkuploadbody"></tbody>
                </table>
            </div>
            <style>
                #dynamic-tableUpload td:empty {
                    display: none;
                }
            </style>
        </div>
    </div>
</div><!-- /.row -->
